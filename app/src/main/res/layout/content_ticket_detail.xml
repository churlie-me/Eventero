<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketDetail"
    tools:showIn="@layout/activity_ticket_detail">
    <LinearLayout
        android:orientation="vertical"
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="15dp"
        android:background="@drawable/frame"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carnival Festival"
            android:id="@+id/eventTitle"
            android:textColor="#000"
            android:textSize="25sp"
            android:textFontWeight="20"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date : "
                android:layout_weight="7"
                android:textColor="#000"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carnival Festival"
                android:layout_weight="2"
                android:id="@+id/evenDate"
                android:textColor="#000"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Venue : "
                android:layout_weight="7"
                android:textColor="#000"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lugogo Cricket Oval"
                android:layout_weight="2"
                android:id="@+id/evenVenue"
                android:textColor="#000"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:background="#C4CDE0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price : "
                android:layout_weight="7"
                android:textColor="#000"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UGX 50,000"
                android:layout_weight="2"
                android:id="@+id/ticketPrice"
                android:textColor="#000"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/frame"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/qrCodeImageView"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Check your email to know how to get to the event."/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>