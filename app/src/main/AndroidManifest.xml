<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mdse.eventero">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EventDetail"
            android:label="@string/title_activity_event_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".TicketDetail"
            android:label="@string/title_activity_ticket_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Tickets"
            android:label="@string/title_activity_tickets"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.login.SignIn"
            android:label="@string/title_activity_sign_in" />
        <activity
            android:name=".Tabbedevent"
            android:label="@string/title_activity_tabbedevent"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>